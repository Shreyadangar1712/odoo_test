<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_linnworks_import_wizard" model="ir.ui.view">
        <field name="name">linnworks.import.wizard.form</field>
        <field name="model">linnworks.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import from Linnworks">
                <group>
                    <field name="import_type"/>
                    <field name="product_import_qty" invisible="import_type not in 'import_product'"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

	<record id="action_linnworks_import_wizard" model="ir.actions.act_window">
	    <field name="name">Linnworks Import</field>
	    <field name="res_model">linnworks.import.wizard</field>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>
    <menuitem id="menu_linnworks_root"
          name="Linnworks"
          web_icon="rishvi_pos,static/src/img/linnworkslogo.png"
          sequence="10"/>
	<menuitem id="menu_linnworks_wizard" name="Linnworks Config" parent="menu_linnworks_root"
          action="rishvi_pos.action_linnworks_import_wizard" sequence="10"/>

</odoo>
