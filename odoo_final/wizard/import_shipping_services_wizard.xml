<odoo>
    <!-- Define the form view for the wizard -->
    <record id="view_import_shipping_services_wizard_form" model="ir.ui.view">
        <field name="name">import.shipping.services.wizard.form</field>
        <field name="model">import.shipping.services.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Shipping Service">
                <footer>
                    <button name="import_data" type="object" string="Import Data" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Link the form view with the action -->
    <record id="action_import_shipping_services_wizard" model="ir.actions.act_window">
        <field name="name">Import Data</field>
        <field name="res_model">import.shipping.services.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_shipping_services_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Scheduled Action -->
    <record id="ir_cron_import_pos_shipping_services" model="ir.cron">
        <field name="name">Import Shipping Service</field>
        <field name="model_id" ref="model_import_shipping_services_wizard"/>
        <field name="state">code</field>
        <field name="code">model.search([], limit=1).import_data()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
    </record>
</odoo>
