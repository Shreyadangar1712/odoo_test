<odoo>
    <!-- ========================================================= -->
    <!-- ========================================================= -->
    <record id="view_product_category_list_simple" model="ir.ui.view">
        <field name="name">product.category.list.simple</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="replace">
                <list string="Product Categories">
                    <field name="name"/>
                    <field name="linnworks_category_id" readonly="1"/>
                </list>
            </xpath>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- ========================================================= -->
    <record id="view_product_category_form_simple" model="ir.ui.view">
        <field name="name">product.category.form.simple</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Product Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="linnworks_category_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>

<record id="action_product_category_simple" model="ir.actions.act_window">
    <field name="name">POS Categories</field>
    <field name="res_model">pos.category</field>
    <field name="view_mode">list,form</field>
</record>

