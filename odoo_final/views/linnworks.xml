<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_linnworks_config_form_inherited" model="ir.ui.view">
        <field name="name">linnworks.integration.form</field>
        <field name="model">linnworks.integration</field>
        <field name="inherit_id" ref="rishvi_authentication.view_linnworks_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='server_url']" position="after">
                <field name="warehouse_id"/>
                <field name="product_import_qty"/>
            </xpath>
        </field>
    </record>
  
    <!-- Scheduled Action -->
    <record id="ir_cron_import_linnworks" model="ir.cron">
        <field name="name">Import Linnworks Products</field>
        <field name="model_id" ref="model_linnworks_integration"/>
        <field name="state">code</field>
        <field name="code">model.search([], limit=1).import_products()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
    </record>
</odoo>
