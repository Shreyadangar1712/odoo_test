<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ShippingServiceDialogTemplate" owl="1">
        <div class="modal fade show" tabindex="-1" style="display: block;" aria-hidden="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Select Shipping Service</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                t-on-click="props.close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Select a shipping service:</p>

                        <!-- Loading State -->
                        <t t-if="state.isLoading">
                            <div class="text-center p-3">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2">Loading shipping services...</p>
                            </div>
                        </t>

                        <!-- Error State -->
                        <t t-if="state.error &amp;&amp; !state.isLoading">
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle me-2"></i>
                                <t t-esc="state.error"/>
                            </div>
                        </t>

                        <!-- Services List -->
                        <t t-if="!state.isLoading &amp;&amp; state.services.length > 0">
                            <div class="shipping-services shipping-services-scroll">
                                <t t-foreach="state.services" t-as="service" t-key="service.id || service._uid">
                                    <button
                                        type="button"
                                        t-attf-class="btn #{state.selectedService &amp;&amp; state.selectedService.id === service.id ? 'btn-primary' : 'btn-outline-primary'}"
                                        t-on-click.prevent="selectService.bind(this, service)">
                                        <t t-esc="service.name"/>- Â£
                                        <t t-esc="service.amount"/>

                                    </button>
                                </t>
                            </div>
                        </t>

                        <!-- Empty State -->
                        <t t-if="!state.isLoading &amp;&amp; !state.error &amp;&amp; state.services.length === 0">
                            <div class="alert alert-info">
                                No shipping services available.
                            </div>
                        </t>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" t-on-click="props.close">Cancel</button>
                        <button
                            type="button"
                            class="btn btn-primary"
                            t-on-click="onOkClick"
                            t-att-disabled="!state.selectedService || state.isLoading">
                            OK
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
