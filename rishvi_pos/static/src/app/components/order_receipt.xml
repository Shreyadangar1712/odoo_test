<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="rishvi_pos.OrderReceipt"
        t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('receipt-total')]" position="after">
             <t t-if="props.data.shippingName and props.data.shipping_amount">
                    <td><span>Shipping:</span></td>
                 <div class="pos-receipt-amount receipt-total">
                        <t t-esc="props.data.shippingName"/>
                     <span t-esc="props.formatCurrency(props.data.shipping_amount)"
                           class="pos-receipt-right-align"/>
                 </div>
            </t>
         </xpath>
     </t>
</templates>
