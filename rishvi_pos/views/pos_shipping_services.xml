<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_pos_shipping_services" model="ir.actions.act_window">
        <field name="name">Pos Shipping Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.shipping.services</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add an Shipping Services Purpose.
            </p>
        </field>
    </record>

    <record id="view_pos_shipping_services_form" model="ir.ui.view">
        <field name="name">pos.shipping.services.form</field>
        <field name="model">pos.shipping.services</field>
        <field name="arch" type="xml">
            <form string="Pos Shipping Services">
                <sheet>
                    <group>
                        <group>
                            <field name="service_id"/>
                            <field name="postal_service_name"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="service_country"/>
                            <field name="vendor_id"/>
                            <field name="active" widget="boolean_toggle" options='{"terminology": "active"}'/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_pos_shipping_services_tree" model="ir.ui.view">
        <field name="name">pos.shipping.services.tree</field>
        <field name="model">pos.shipping.services</field>
        <field name="arch" type="xml">
            <list>
                <field name="service_id" readonly="1"/>
                <field name="postal_service_name"/>
                <field name="service_country"/>
                <field name="vendor_id"/>
                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="active" widget="boolean_toggle" options='{"terminology": "active"}'/>
            </list>
        </field>
    </record>

     <menuitem id="pos_shipping_services_menu_catalog"
               name="Linn Operations"
               parent="point_of_sale.menu_point_root" sequence="20"/>

    <menuitem id="menu_pos_shipping_services"
              action="action_pos_shipping_services"
              parent="pos_shipping_services_menu_catalog"
              sequence="10"/>


    <menuitem id="menu_pos_shipping_services_category"
              name="POS Categories"
              action="action_product_category_simple"
              parent="pos_shipping_services_menu_catalog"
              sequence="15"/>
</odoo>